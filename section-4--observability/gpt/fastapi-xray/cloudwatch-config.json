{
  "agent": {
    "metrics_collection_interval": 60,
    "region": "us-west-2",
    "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
    "debug": true,
    "omit_hostname": true,
    "run_as_user": "root",
    "usage_data": false
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/syslog/syslog.log",            
            "log_group_name": "FastAPIAppMetrics",
            "log_stream_name": "FastAPIAppStream",
            "timestamp_format": "%Y-%m-%d %H:%M:%S"
          }
        ]
      }
    }
  },
  "traces": {
    "traces_collected": {
      "xray": {
        "bind_address": "0.0.0.0:2000",
        "tcp_proxy": {
          "bind_address": "0.0.0.0:2000"
        }
      }
    }
  }
}
